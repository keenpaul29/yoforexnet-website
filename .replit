modules = ["nodejs-20", "web", "postgresql-16"]
run = "bash start-hybrid.sh"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "vm"
build = ["npm", "run", "build"]
run = ["bash", "start-production.sh"]

[[ports]]
localPort = 3000
externalPort = 3003

[[ports]]
localPort = 3001
externalPort = 5173

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41287
externalPort = 3002

[[ports]]
localPort = 42787
externalPort = 3000

[[ports]]
localPort = 45011
externalPort = 4200

[env]
PORT = "5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production Mode"

[[workflows.workflow]]
name = "Production Mode"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-production.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
integrations = ["javascript_log_in_with_replit:1.0.0", "javascript_database:1.0.0", "javascript_object_storage:1.0.0"]
expertMode = true
