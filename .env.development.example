# ============================================================================
# YoForex Development Environment Configuration
# ============================================================================
# IMPORTANT: Copy this file to .env.development and fill in your values
# This file is for local development only

# ============================================================================
# Application Settings
# ============================================================================
NODE_ENV=development
APP_NAME=yoforex-dev

# ============================================================================
# Development Server Ports
# ============================================================================
# Next.js frontend (development server)
PORT=5000

# Express API port
API_PORT=3001

# ============================================================================
# URLs (Local Development)
# ============================================================================
# Local development URLs
NEXT_PUBLIC_SITE_URL=http://localhost:5000
EXPRESS_URL=http://localhost:3001
NEXT_PUBLIC_EXPRESS_URL=http://localhost:5000

# Allowed CORS origins for development
ALLOWED_ORIGINS=localhost:5000,localhost:3001,127.0.0.1:5000,127.0.0.1:3001

# ============================================================================
# Database Configuration (Local PostgreSQL)
# ============================================================================
# Local PostgreSQL (no SSL required for local dev)
DATABASE_URL=postgresql://yoforex:password@localhost:5432/yoforex_dev

# Or use Docker PostgreSQL
# DATABASE_URL=postgresql://postgres:password@localhost:5433/yoforex_dev

# Database Pool Settings (smaller for dev)
DB_POOL_MAX=5
DB_POOL_MIN=1
DB_IDLE_TIMEOUT=10000
DB_CONNECTION_TIMEOUT=2000

# No SSL for local development
DB_SSL_REJECT_UNAUTHORIZED=false

# ============================================================================
# Session Configuration (Development)
# ============================================================================
# Simple session secret for development
SESSION_SECRET=dev-session-secret-change-in-production

# Session settings for development
SESSION_NAME=yoforex_dev_session
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ============================================================================
# Security Settings (Relaxed for Development)
# ============================================================================
# Simple JWT secret for development
JWT_SECRET=dev-jwt-secret-change-in-production

# Fewer bcrypt rounds for faster development
BCRYPT_ROUNDS=10

# Relaxed rate limiting for development
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ============================================================================
# Debug Settings
# ============================================================================
# Enable all debug output
DEBUG=*
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Show SQL queries in console
LOG_SQL=true

# Enable source maps
NODE_OPTIONS=--enable-source-maps

# React development settings
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_TELEMETRY_DISABLED=1

# ============================================================================
# File Storage (Local Development)
# ============================================================================
# Use local file system for uploads
STORAGE_TYPE=local
UPLOAD_DIR=./public/uploads

# Or use MinIO for S3-compatible local storage
# STORAGE_TYPE=s3
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=minioadmin
# AWS_SECRET_ACCESS_KEY=minioadmin
# AWS_S3_BUCKET=yoforex-dev
# AWS_ENDPOINT=http://localhost:9000

# ============================================================================
# Email Service (Development)
# ============================================================================
# Use console output for emails in development
EMAIL_PROVIDER=console

# Or use Mailhog/MailCatcher for local email testing
# EMAIL_PROVIDER=smtp
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_USER=
# SMTP_PASS=
# SMTP_SECURE=false

# Sender details
BREVO_SENDER_EMAIL=dev@localhost
BREVO_SENDER_NAME=YoForex Dev

# ============================================================================
# Payment Processing (Test Mode)
# ============================================================================
# Stripe test keys (use test mode keys from Stripe dashboard)
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key
STRIPE_SECRET_KEY=sk_test_your_test_secret_key
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret

# ============================================================================
# OAuth Providers (Development)
# ============================================================================
# Google OAuth (localhost redirect)
GOOGLE_CLIENT_ID=your_dev_google_client_id
GOOGLE_CLIENT_SECRET=your_dev_google_client_secret

# Replit OAuth (development app)
REPLIT_CLIENT_ID=your_dev_replit_client_id
REPLIT_CLIENT_SECRET=your_dev_replit_client_secret

# ============================================================================
# Redis (Optional for Development)
# ============================================================================
# Local Redis (if using Redis in development)
# REDIS_URL=redis://localhost:6379

# ============================================================================
# Feature Flags (All Enabled for Testing)
# ============================================================================
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_AUTH=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_2FA=false
ENABLE_API_DOCS=true
ENABLE_DEBUG_MODE=true
ENABLE_MAINTENANCE_MODE=false

# ============================================================================
# Development Tools
# ============================================================================
# Enable hot reload
NEXT_PUBLIC_HOT_RELOAD=true

# Enable React DevTools
REACT_DEVTOOLS=true

# Enable Redux DevTools (if using Redux)
REDUX_DEVTOOLS=true

# GraphQL Playground (if using GraphQL)
GRAPHQL_PLAYGROUND=true

# ============================================================================
# Mock Data
# ============================================================================
# Use mock data for development
USE_MOCK_DATA=false

# Seed database on startup
SEED_DATABASE=true

# ============================================================================
# Testing Configuration
# ============================================================================
# Test database (separate from development)
TEST_DATABASE_URL=postgresql://yoforex:password@localhost:5432/yoforex_test

# Test API endpoints
TEST_API_URL=http://localhost:3001

# ============================================================================
# Development Proxy Settings (if behind corporate proxy)
# ============================================================================
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1

# ============================================================================
# VS Code / WebStorm Integration
# ============================================================================
# Auto-attach debugger
NODE_OPTIONS=--inspect

# Source map support
GENERATE_SOURCEMAP=true

# ============================================================================
# Docker Development (if using Docker)
# ============================================================================
# COMPOSE_PROJECT_NAME=yoforex-dev
# DOCKER_BUILDKIT=1
# COMPOSE_DOCKER_CLI_BUILD=1

# ============================================================================
# End of Development Configuration
# ============================================================================